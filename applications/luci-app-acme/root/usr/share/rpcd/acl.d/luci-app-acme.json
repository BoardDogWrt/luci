{
        "luci-app-acme": {
                "description": "Grant UCI access for luci-app-acme",
                "read": {
                        "cgi-io": [ "exec" ],
                        "file": {
                                "/etc/ssl/acme": [ "list" ],
                                "/sbin/logread -e acme": [ "exec" ],
                                "/usr/sbin/logread -e acme": [ "exec" ]
                        },
                        "uci": [ "acme" ]
                },
                "write": {
                        "uci": [ "acme" ]
                }
        }
}
